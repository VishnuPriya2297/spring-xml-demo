<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
<!-- creating beans for actors-->
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Mahesh "/>
        <constructor-arg name="gender" value="M"/>
        <constructor-arg name="age" value="40"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Hrithik"/>
        <constructor-arg name="gender" value="M"/>
        <constructor-arg name="age" value="47"/>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Katrina"/>
        <constructor-arg name="gender" value="F"/>
        <constructor-arg name="age" value="41"/>
    </bean>
<!-- using auto-wire-->
    <bean id="movie" class="com.stackroute.domain.Movie" scope="prototype" autowire="byName">

    </bean>

    <bean name="movieA,movieB" class="com.stackroute.domain.Movie" scope="prototype" autowire="constructor">

    </bean>


</beans>
